class Solution {
  public:
    long long int minOperations(int N) {
        // Code here
        long long ans = 0;
        if(N %2){
            N = N/2;
            ans = (long long) N*(N+1);
        }
        else{
            N = N/2;
            ans = (long long ) N * N;
        }
        return ans;
    }
};
